<Window x:Class="Xlsx_and_Csv_Comparison_Dotnet_Program.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CSV/XLSX Compare Tool" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Source File Section -->
        <GroupBox Header="Source File" Grid.Row="0" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="txtSourceFilePath" Grid.Row="0" Grid.Column="0" 
                         IsReadOnly="True" Margin="0,0,10,5"/>
                <Button x:Name="btnLoadSource" Grid.Row="0" Grid.Column="1" 
                        Content="Load Source CSV/XLSX" Width="150" Click="BtnLoadSource_Click"/>
                <TextBlock x:Name="lblSourceFileInfo" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                           Margin="0,5,0,0" Foreground="Blue"/>
            </Grid>
        </GroupBox>

        <!-- Destination File Section -->
        <GroupBox Header="Destination File" Grid.Row="1" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="txtDestinationFilePath" Grid.Row="0" Grid.Column="0" 
                         IsReadOnly="True" Margin="0,0,10,5"/>
                <Button x:Name="btnLoadDestination" Grid.Row="0" Grid.Column="1" 
                        Content="Load Destination CSV/XLSX" Width="150" Click="BtnLoadDestination_Click"/>
                <TextBlock x:Name="lblDestinationFileInfo" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                           Margin="0,5,0,0" Foreground="Blue"/>
            </Grid>
        </GroupBox>

        <!-- Main Column Selection -->
        <GroupBox Header="Main Comparing Column Selection" Grid.Row="2" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Source Main Column:" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbSourceMainColumn" SelectionChanged="CmbSourceMainColumn_SelectionChanged"/>
                </StackPanel>
                
                <StackPanel Grid.Row="0" Grid.Column="1">
                    <TextBlock Text="Destination Main Column:" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbDestinationMainColumn" SelectionChanged="CmbDestinationMainColumn_SelectionChanged"/>
                </StackPanel>

                <!-- Replacement Rules -->
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,10,0,0">
                    <TextBlock Text="Replacement Rules (applied top-to-bottom to the key)" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button x:Name="btnAddReplacement" Content="Add Rule" Width="100" Height="25" Margin="0,0,8,0" Click="BtnAddReplacement_Click"/>
                        <Button x:Name="btnRemoveReplacement" Content="Remove Selected" Width="130" Height="25" Margin="0,0,8,0" Click="BtnRemoveReplacement_Click"/>
                        <Button x:Name="btnMoveReplacementUp" Content="Move Up" Width="90" Height="25" Margin="0,0,8,0" Click="BtnMoveReplacementUp_Click"/>
                        <Button x:Name="btnMoveReplacementDown" Content="Move Down" Width="100" Height="25" Click="BtnMoveReplacementDown_Click"/>
                    </StackPanel>
                    <DataGrid x:Name="dgReplacementRules" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Replace From" Binding="{Binding From}" Width="*"/>
                            <DataGridTextColumn Header="Replaced To" Binding="{Binding To}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Column Mapping Section -->
        <GroupBox Header="Column Mapping" Grid.Row="3" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="btnAutoMap" Content="Auto Map Columns" Width="120" Height="25" 
                            Click="BtnAutoMap_Click" Margin="0,0,10,0"/>
                    <TextBlock Text="Automatically maps columns with similar names" 
                               VerticalAlignment="Center" Foreground="Gray" FontSize="11"/>
                </StackPanel>
                
                <ScrollViewer Grid.Row="1">
                    <DataGrid x:Name="dgColumnMapping" AutoGenerateColumns="False" 
                              CanUserAddRows="False" CanUserDeleteRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Source Column" Binding="{Binding SourceColumn}" IsReadOnly="True" Width="*"/>
                            <DataGridComboBoxColumn Header="Destination Column" 
                                                    SelectedItemBinding="{Binding DestinationColumn}" 
                                                    Width="*" x:Name="colDestinationMapping"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </Grid>
        </GroupBox>

        <!-- Comparison Options Section -->
        <GroupBox Header="Comparison Options" Grid.Row="4" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="10">
                <CheckBox x:Name="chkIgnoreCase" Content="Ignore Case" IsChecked="True"  Margin="5,5,5,5"
                         Checked="ChkIgnoreCase_Checked" Unchecked="ChkIgnoreCase_Unchecked"/>
                <CheckBox x:Name="chkIgnoreWhitespace" Content="Ignore Whitespace" IsChecked="True"  Margin="5,5,5,5"
                          Checked="ChkIgnoreWhitespace_Checked" Unchecked="ChkIgnoreWhitespace_Unchecked"/>
                <CheckBox x:Name="chkIgnoreSymbols" Content="Ignore Symbols"  IsChecked="False" Margin="5,5,5,5"
                      Checked="ChkIgnoreSymbols_Checked" Unchecked="ChkIgnoreSymbols_Unchecked"/>
            </StackPanel>
        </GroupBox>

        <!-- Run Button and Progress -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnRun" Content="Run" Width="100" Height="35" 
                    Click="BtnRun_Click" IsEnabled="False" Margin="0,0,20,0"/>
            <ProgressBar x:Name="progressBar" Width="200" Height="20" 
                         Visibility="Collapsed" Margin="0,0,20,0"/>
            <TextBlock x:Name="lblProgress" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>